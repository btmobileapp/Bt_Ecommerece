<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="parker.biyani.com.parker.user.ActivityUserCreation">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="General"
        android:id="@+id/textView14"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
<LinearLayout
    android:layout_width="match_parent"
    android:background="@drawable/bground"

android:layout_below="@id/textView14"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout3">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="15dp"

        android:layout_height="wrap_content"
        android:layout_below="@+id/textView14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textSize="18dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                android:text="User Type :"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:id="@+id/radio"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rdoAdmin"
                android:layout_weight="1"
                android:text="Admin"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/rdoCustomer"
                android:text="Customer"/>
        </RadioGroup>

        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Shop Name"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:id="@+id/edShopName"
            style="@android:style/Widget.Holo.Light.EditText"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Person Name"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:id="@+id/edPersonName"
            style="@android:style/Widget.Holo.Light.EditText"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number "
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:id="@+id/edContact"
            android:inputType="phone"

            style="@android:style/Widget.Holo.Light.EditText"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City "
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:id="@+id/edShopAddress"
            style="@android:style/Widget.Holo.Light.EditText"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address "
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:id="@+id/edEmailAddress"
            android:inputType="textEmailAddress"
            style="@android:style/Widget.Holo.Light.EditText"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Credit Limit"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:id="@+id/edCreditLimit"
            android:inputType="numberDecimal"
            style="@android:style/Widget.Holo.Light.EditText"
            />



    </LinearLayout>

</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Crendentials"
        android:id="@+id/textView15"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignLeft="@+id/textView14"
        android:layout_alignStart="@+id/textView14" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/textView15"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/bground"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User Name"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:id="@+id/edUserName"

            style="@android:style/Widget.Holo.Light.EditText"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:id="@+id/edPassword"
            android:inputType="textPassword"
            style="@android:style/Widget.Holo.Light.EditText"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Re-Type Password"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:id="@+id/edRePass"
            style="@android:style/Widget.Holo.Light.EditText"
            />


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save User"
        android:id="@+id/btnsave"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/buttonround"
        android:layout_margin="10dp"
        android:layout_below="@+id/linearLayout4"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
</ScrollView>
</RelativeLayout>
